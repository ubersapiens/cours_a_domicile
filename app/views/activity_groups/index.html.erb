<div class="container-fluid" id="activity-group-header-container">
  <div class="row">
    <div class="col-lg-12 text-center" id="header-title">
      <h1>Listing Activity Groups</h1>
    </div>
  </div>
</div>
<div class="container-fluid" id="activity-group-main-container">
  <div class="container">
    <div class="row">
      <div class="col-lg-12" id="header-title">
        <table>
          <thead>
            <tr>
              <th colspan="3"></th>
            </tr>
          </thead>

          <tbody>
            <% @activity_groups.each do |activity_group| %>
              <tr>
                <td><%= activity_group.name %></td>
                <td><%= activity_group.id %></td>
                <td><%= link_to 'Show', activity_group %></td>
                <td><%= link_to 'Edit', edit_activity_group_path(activity_group) %></td>
                <td><%= link_to 'Destroy', activity_group, method: :delete, data: { confirm: 'Are you sure?' } %></td>
              </tr>
            <% end %>
          </tbody>
        </table>
        <%= link_to 'New Activity group', new_activity_group_path %>
      </div>
    </div>
  </div>
</div>