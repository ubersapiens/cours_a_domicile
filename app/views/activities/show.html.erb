<div class="container-fluid" id="activity-header-container">
  <div class="row">
    <div class="col-lg-12 text-center" id="header-title">
      <h1><%= @activity.name %></h1>
    </div>
  </div>
</div>
<div class="container-fluid" id="activity-main-container">
  <div class="row">
    <div class="col-lg-12 text-center" id="header-title">
      <p id="notice"><%= notice %></p>
      <div class="row">
        <div class="col-lg-5">
          <%= @activity.description %>
        </div>
        <div class="col-lg-7">
          <iframe width="420" height="315" src="<%= @activity.you_tube_video %>">
          </iframe>
          <table id="pricing-table">
            <tr>
              <th colspan="3">Tarif</th>
            </tr>
            <tr>
              <td>1 personne</td>
              <td>à partir de</td>
              <td><%= @activity.price_one_person %> €/h*</td>
            </tr>
            <tr>
              <td>Couple</td>
              <td>à partir de</td>
              <td><%= @activity.price_two_persons %> €/h*</td>
            </tr>
            <tr>
              <td>Groupe</td>
              <td>à partir de</td>
              <td><%= @activity.price_group %> €/h*</td>
            </tr>
          </table>
        </div>
      </div>
      <div class="row" style="margin:2em 0;">
        <div class="col-lg-12">
          <a href="/students/new" id="activity-button">Je fais ma demande</a>
        </div>
      </div>
      <div class="row">
        <%= link_to 'Back', root_path %>
      </div>
    </div>
  </div>
</div>