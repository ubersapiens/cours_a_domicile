<div class="container-fluid" id="activity-header-container">
  <div class="row">
    <div class="col-lg-12 text-center" id="header-title">
      <h1>Listing Activity Groups</h1>
    </div>
  </div>
</div>
<div class="container-fluid" id="activity-main-container">
  <div class="container">
    <div class="row">
      <div class="col-lg-12" id="header-title">
        <table>
          <thead>
            <tr>
              <th colspan="3"></th>
            </tr>
          </thead>

          <tbody>
            <% @activities.each do |activity| %>
              <tr>
                <td><%= activity.name %></td>
                <td><%= activity.id %></td>
                <td><%= link_to 'Show', activity %></td>
                <td><%= link_to 'Edit', edit_activity_path(activity) %></td>
                <td><%= link_to 'Destroy', activity, method: :delete, data: { confirm: 'Are you sure?' } %></td>
              </tr>
            <% end %>
          </tbody>
        </table>
        <%= link_to 'New Activity', new_activity_path %>
      </div>
    </div>
  </div>
</div>