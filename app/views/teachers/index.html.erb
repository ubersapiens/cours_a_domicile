<div class="container-fluid" id="activity-group-header-container">
  <div class="row">
    <div class="col-lg-12 text-center" id="header-title">
      <h1>Listing Teachers</h1>
    </div>
  </div>
</div>
<div class="container-fluid" id="activity-group-main-container">
  <div class="container">
    <div class="row">
      <div class="col-lg-12" id="header-title">
        <table>
          <thead>
            <tr>
              <th>Civil status</th>
              <th>First name</th>
              <th>Last name</th>
              <th>Email</th>
              <th>Phone</th>
              <th colspan="3"></th>
            </tr>
          </thead>

          <tbody>
            <% @teachers.each do |teacher| %>
              <tr>
                <td><%= teacher.civil_status %></td>
                <td><%= teacher.first_name %></td>
                <td><%= teacher.last_name %></td>
                <td><%= teacher.email %></td>
                <td><%= teacher.phone_number %></td>
                <td><%= link_to 'Show', teacher %></td>
                <td><%= link_to 'Edit', edit_teacher_path(teacher) %></td>
                <td><%= link_to 'Destroy', teacher, method: :delete, data: { confirm: 'Are you sure?' } %></td>
              </tr>
            <% end %>
          </tbody>
        </table>
        <%= link_to 'New Teacher', new_teacher_path %>
      </div>
    </div>
  </div>
</div>